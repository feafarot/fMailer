@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sign in &middot; fMailer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Email Auto-Cast Service">
    <meta name="author" content="feafarot">
    <!-- Le styles -->
    <link href="@Url.Content("~/Content/Common.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Bootstrap/Css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Bootstrap/Css/bootstrap-responsive.css")" rel="stylesheet" />
    <style type="text/css">
      @@font-face 
      {
        font-family: 'Segoe UI Light';
        src: url('@Url.Content("~/Content/Fonts/SegoeUI-Light.ttf")') format('true-type');
        }
      html { height: 100%; }
      body {
        height: 100%;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border-left: 1px solid rgba(0, 127, 255, 0.4);
        border-right: 1px solid rgba(0, 127, 255, 0.4);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

      #wrap {
        min-height: 100%;
        height: auto !important;
        height: 100%;
        margin: 0 auto -60px;
      }

      #push,
      #footer {
        height: 60px;
      }
      #footer {
        background-color: #f5f5f5;
      }
      .container .credit {
        margin: 20px 0;
      }

      @@media (max-width: 767px) {
        #footer {
          margin-left: -20px;
          margin-right: -20px;
          padding-left: 20px;
          padding-right: 20px;
        }
      }
    </style>
    @*<!-- Fav and touch icons -->
    <link rel="shortcut icon" href="../assets/icon/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">*@
</head>
<body>
    @Html.Partial("ErrorModalPartial")
    <div class="container">
        <form class="form-signin">
            <h2 class="form-signin-heading" style="font-size: 36px;">Please sign in</h2>

            <input id="login" type="text" class="input-block-level" placeholder="Login or Email" data-bind="value: login, valueUpdate: 'afterkeydown', enterPress: signin">
            <input id="password" type="password" class="input-block-level" placeholder="Password" data-bind="value: password, valueUpdate: 'afterkeydown', enterPress: signin">

            <div class="progress progress-striped active" style="height: 4px; margin: -9px 0px 5px 0px; display: none;" data-bind="visible: isBusy">
                <div class="bar" style="width: 100%;"></div>
            </div>
            <button class="btn btn-info" type="button" data-bind="click: signin">Sign In</button>
            <span class="label label-important" data-bind="visible: isInvalidUser" style="display: none; font-weight: normal;">Invalid login or password</span>
        </form>
    </div><!-- /container -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    <script src="@Url.Content("~/Content/Bootstrap/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/timers-manager.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/helpers.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/services-manager.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/ViewModels/Auth/SignInViewModel.js")" type="text/javascript"></script>
    <script type="text/javascript">
        ko.applyBindings(new SignInViewModel());
        $(document).ready(function ()
        {
            $("#login").focus();
        });
    </script>
</body>
</html>

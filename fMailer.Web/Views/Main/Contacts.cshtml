@{
    ViewBag.Title = "Contacts and Groups";
    ViewBag.ViewModelPath = "~/ViewModels/Main/Contacts";
    ViewBag.CurrentRoute = fMailer.Web.RouteNames.Contacts;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="large"><img alt="Contacts and Groups" src="@Url.Content("~/Content/Images/User-Message.png")" /> Contacts and Groups</h1>
</div>
<div class="row-fluid">
    <button class="btn btn-primary" title="Create new Template" data-bind="">
        Create new Contact
    </button>
    <table class="table table-hover">
        <tbody data-bind="foreach: contacts">
            <tr>
                <td>
                    <div class="row-fluid">
                        <div class="span1">
                            <img alt="Add template" src="@Url.Content("~/Content/Images/Mail Write(d).png")" style="margin-top: 30px;" />
                        </div>
                        <div class="span11">
                            <h3><a href="#" data-bind=""></a> 
                            <button class="close" style="float: right;" title="Delete template" data-bind="">x</button></h3>
                            <div data-bind=""></div>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>    
</div>
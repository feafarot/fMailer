@using System.Linq
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title &middot; fMailer</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Email Auto-Cast Service">
    <meta name="author" content="feafarot">

    <link href="@Url.Content("~/Content/Common.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Bootstrap/Css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Bootstrap/Css/bootstrap-responsive.min.css")" rel="stylesheet">
    <style type="text/css">
        html,
        body 
        {
            height: 100%;
        }
        .sidebar-nav 
        {
            padding: 9px 0;
        }
        #wrap 
        {
            min-height: 100%;
            height: auto !important;
            height: 100%;
            margin: 0 auto -25px;
        }
        #push,
        #footer 
        {
            height: 25px;
        }
        #footer 
        {
            background-color: #f5f5f5;
        }

        @@media (max-width: 767px) 
        {
            #footer 
            {
                margin-left: -20px;
                margin-right: -20px;
                padding-left: 20px;
                padding-right: 20px;
            }
        }
    </style>
</head>
<body>
    @Html.Partial("ErrorModalPartial")
    <div id="wrap">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="">fMailer</a>
                    <div class="nav-collapse collapse">
                        <p class="navbar-text pull-right">
                            Logged in as <a href="#" class="navbar-link">Username</a> | <a href="">Sign Out</a>
                        </p>
                        <ul class="nav">
                            <li class="active"><a href="#">Hub</a></li>
                            <li><a href="#about">Help</a></li>
                            <li><a href="#contact">Settings</a></li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </nav>
        <div style="height: 60px;"><!-- Layout helper --></div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span3">
                    <div class="well sidebar-nav">
                        <ul class="nav nav-list">
                            <li class="nav-header">Sidebar</li>
                            <li class="active"><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li class="nav-header">Sidebar</li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                        </ul>
                    </div>
                </div>
                <!--/span-->
                <div class="span9">
                    @RenderBody()                    
                </div>
                <!--/span-->
            </div>
            <!--/row-->
        </div>
        <div id="push">
        </div>
    </div>
    <footer id="footer">
        <p style="float: right" class="muted credit">
            Copyright © 2012 feafarot | version: @typeof(fMailer.Web.RouteNmaes).Assembly.GetName().Version.ToString() &nbsp;
        </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    <script src="@Url.Content("~/Content/Bootstrap/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/timers-manager.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/helpers.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/services-manager.js")" type="text/javascript"></script>
    
    @if (!string.IsNullOrEmpty(ViewBag.ViewModelPath))
    {        
    <script src="@Url.Content(ViewBag.ViewModelPath)" type="text/javascript"></script>
    <script type="text/javascript">
        ko.applyBindings(new @ViewBag.ViewModelPath.Split('/').Last()ViewModel());
    </script>
    }
    @RenderSection("scripts", required: false)
</body>
</html>
